<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".MainActivity" android:id="@+id/back">


    <TextView
            android:layout_width="110dp"
            android:layout_height="23dp"
            android:text="@string/calculadora"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.448"
            android:id="@+id/calc"/>
    <Button
            android:text="@string/calcular"
            android:layout_width="73dp"
            android:layout_height="59dp"
            android:id="@+id/calculator" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.026" android:layout_marginBottom="88dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Colored"/>
    <EditText
            android:layout_width="116dp"
            android:layout_height="90dp"
            android:background="#ffffff"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/value1" android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="176dp"
            app:layout_constraintBottom_toBottomOf="parent" android:autofillHints="" tools:targetApi="o"/>
    <EditText
            android:layout_width="102dp"
            android:layout_height="65dp"
            android:background="#E8EAF6"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/operator" android:layout_marginBottom="196dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/value1"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/value2"
            app:layout_constraintHorizontal_bias="0.65" android:autofillHints="" tools:targetApi="o"/>
    <EditText
            android:layout_width="116dp"
            android:layout_height="90dp"
            android:background="#ffffff"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/value2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="176dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            android:autofillHints="" tools:targetApi="o"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/result" android:layout_marginBottom="304dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints="" tools:targetApi="o"/>

</android.support.constraint.ConstraintLayout>